@model Nop.Spa.Models.AccessModel
@{
    ViewData["Title"] = "GetAccessToken";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetAccessToken</h2>

<h2>Access Data</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetAccessToken">
            <div class="form-group">
                <label asp-for="UserAccessModel.ClientId" class="control-label">Client Id</label>
                <input asp-for="UserAccessModel.ClientId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="UserAccessModel.ClientSecret" class="control-label">Client Secret</label>
                <input asp-for="UserAccessModel.ClientSecret" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="UserAccessModel.ServerUrl" class="control-label">ServerUrl</label>
                <input asp-for="UserAccessModel.ServerUrl" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="UserAccessModel.RedirectUrl" class="control-label">RedirectUrl</label>
                <input asp-for="UserAccessModel.RedirectUrl" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <a asp-controller="Home" asp-action="RefreshAccessToken"
           asp-route-refreshToken="@Model.AuthorizationModel.RefreshToken"
           asp-route-clientId="@Model.UserAccessModel.ClientId"
           asp-route-clientSecret="@Model.UserAccessModel.ClientSecret"
           asp-route-serverUrl="@Model.UserAccessModel.ServerUrl">Refresh Access Token</a>
    </div>
</div>

<div class="row">
    <h2>Authorization Data</h2>
    <div>
        <h4>Access Token</h4>
        <p id="access-token">@Model.AuthorizationModel.AccessToken</p>
    </div>
    <div>
        <h4>Refresh Token</h4>
        <p id="refresh-token">@Model.AuthorizationModel.RefreshToken</p>
    </div>
    <div>
        <h4>Access Token Expires In Seconds</h4>
        <p id="expires-in">@Model.AuthorizationModel.ExpiresIn</p>
    </div>
    <div>
        <h4>Token Type</h4>
        <p>@Model.AuthorizationModel.TokenType</p>
    </div>
</div>
