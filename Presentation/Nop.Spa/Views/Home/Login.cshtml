@model Nop.Spa.Models.UserAccessModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">

            <div class="form-group">
                <label asp-for="ClientId" class="control-label">Client Id</label>
                <input asp-for="ClientId" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="ClientSecret" class="control-label">Client Secret</label>
                <input asp-for="ClientSecret" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ServerUrl" class="control-label">ServerUrl</label>
                <input asp-for="ServerUrl" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="RedirectUrl" class="control-label">RedirectUrl</label>
                <input asp-for="RedirectUrl" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
